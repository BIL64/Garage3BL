@using Garage3.Core

@model IEnumerable<Garage3.Core.Vehicle>

@{    
    ViewData["Title"] = "Index";
}

<h2>Parkerade fordon i garaget</h2>

<h4 style="color: violet">@Auxiliary.Thanks4P</h4> @*Meddelande*@
<h5 style="color: green ">@Auxiliary.Operation</h5> @*Meddelande*@
<h5 style="color: orangered">@Auxiliary.Fullt</h5> @*Meddelande*@

<table class="table">
    <thead>
        <tr>            
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
                <a href="@Url.Action("SearchSort", new {sortOrder=ViewBag.TypeSort})">
                    <img src="@Url.Content("../images/UpDownArrow.png")" id="arrows" alt="arrows" />
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegNo)
                <a href="@Url.Action("SearchSort", new {sortOrder=ViewBag.RegnoSort})">
                <img src="@Url.Content("../images/UpDownArrow.png")" id="arrows" alt="arrows" />
                </a>
            </th>                                    
            <th>
                @Html.DisplayNameFor(model => model.ArrivalTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkedTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Place)
            </th>            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            if (item.IsParked)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegNo)
                    </td>                                
                    <td>
                        @Html.DisplayFor(modelItem => item.ArrivalTime)                
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParkedTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Place)
                    </td>
                    <td>
                        <button type="button" class="abutt"><a class="alink" asp-action="Unparking" asp-route-id="@item.Id">Checka ut</a></button>
                    </td>
                </tr>
            }
}
    </tbody>
