@using Garage3.Core

@model Garage3.Core.Vehicle

@{
    ViewData["Title"] = "Delete";
}

<h2>Avregistrera ditt fordon</h2>

<div>    
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegNo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegNo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vmodel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vmodel)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Avregistrera" class="btn btn-danger" />&nbsp;
        <button type="button" class="aabutt"><a class="alink" asp-action="Parray">Gå tillbaka</a></button>
    </form>
</div>
<div class="md-4">
    <br />
    <h5 style="color: green ">@Auxiliary.Operation</h5> @*Meddelande*@
    <h5 style="color: orangered">@Auxiliary.WarningReg</h5> @*Meddelande*@
</div>
