@using Garage3.Core

@model Garage3.Core.Vehicle

@{
    ViewData["Title"] = "Edit";
}

<h2>Ändra</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RegNo" class="control-label"></label>
                <input asp-for="RegNo" class="form-control" />
                <span asp-validation-for="VtypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VtypeId" class="control-label"></label>
                <select asp-for="VtypeId" class="form-control" asp-items="ViewBag.VtypeId"></select>
                <span asp-validation-for="VtypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vmodel" class="control-label"></label>
                <input asp-for="Vmodel" class="form-control" />
                <span asp-validation-for="Vmodel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wheels" class="control-label"></label>
                <input asp-for="Wheels" class="form-control" />
                <span asp-validation-for="Wheels" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="IsParked" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />&nbsp;
                <button type="button" class="aabutt"><a class="alink" asp-action="Parray">Gå tillbaka</a></button>
            </div>
        </form>
    </div>
    <div class="md-4">
        <br />
        <h5 style="color: green ">@Auxiliary.Operation</h5> @*Meddelande*@
        <h5 style="color: orangered">@Auxiliary.WarningReg</h5> @*Meddelande*@
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
